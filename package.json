{
  "name": "lmtlss-soul",
  "version": "0.1.0",
  "description": "Stateless per-prompt personhood on a persistent meaning kernel",
  "keywords": [
    "ai",
    "soul",
    "personhood",
    "persistence",
    "llm",
    "bitcoin"
  ],
  "homepage": "https://github.com/lmtlsssoul/lmtlsssoul#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmtlsssoul/lmtlsssoul.git"
  },
  "license": "MIT",
  "author": "lmtlss soul",
  "type": "module",
  "bin": {
    "soul": "soul.mjs"
  },
  "main": "dist/index.js",
  "files": [
    "dist/",
    "soul.mjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown src/index.ts",
    "dev": "node --import tsx src/cli/index.ts",
    "backup:pass": "bash scripts/backup-pass.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "format": "oxfmt --check src/",
    "format:fix": "oxfmt --write src/",
    "soul": "node --import tsx src/cli/index.ts"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "enquirer": "^2.4.1",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "tsdown": "^0.4.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
